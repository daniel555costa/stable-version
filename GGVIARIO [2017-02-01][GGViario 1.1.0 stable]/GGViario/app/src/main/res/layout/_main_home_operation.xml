<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_operation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:contentPadding="16dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="2dp"
    android:elevation="4dp"
    android:layout_marginTop="@dimen/mat_card_margin"
    android:layout_marginLeft="@dimen/mat_card_margin"
    android:layout_marginBottom="0dp"
    app:cardBackgroundColor="@color/mat_indigo_primary_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:id="@+id/img_operation"
            android:src="@drawable/ic_sync_white_48dp"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/tv_title_operation"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Vendas"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>