<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <TextView
            android:id="@+id/tv_crop_content_qunatity"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="200"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/shap_oval_primary"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/tv_crop_content_sector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:text="Galinhas Velhas"
            android:textStyle="bold"
            android:layout_below="@+id/tv_crop_content_qunatity"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_crop_content_percas"
            android:layout_below="@+id/tv_crop_content_sector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7 Quebrados\n1 Morta"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>